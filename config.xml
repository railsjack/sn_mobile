<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nahrae.safetynotice" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>snapp</name>
	
    <description>
        Safety Notice
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Home
    </author>
    <content src="index.html" />
		
	
	<platform name="android">
		<icon src="www/res/icon/android/icon-36-ldpi.png" density="ldpi" />
		<icon src="www/res/icon/android/icon-48-mdpi.png" density="mdpi" />
		<icon src="www/res/icon/android/icon-72-hdpi.png" density="hdpi" />
		<icon src="www/res/icon/android/icon-96-xhdpi.png" density="xhdpi" />
	</platform>
	
	<platform name="ios">
		<!-- iOS 8.0+ -->
		<!-- iPhone 6 Plus  -->
		<icon src="www/res/icon/ios/icon-152.png" width="180" height="180" />
		<!-- iOS 7.0+ -->
		<!-- iPhone / iPod Touch  -->
		<icon src="www/res/icon/ios/icon-60.png" width="60" height="60" />
		<icon src="www/res/icon/ios/icon-120.png" width="120" height="120" />
		<!-- iPad -->
		<icon src="www/res/icon/ios/icon-76.png" width="76" height="76" />
		<icon src="www/res/icon/ios/icon-152.png" width="152" height="152" />
		<!-- iOS 6.1 -->
		<!-- Spotlight Icon -->
		<icon src="www/res/icon/ios/icon-40.png" width="40" height="40" />
		<icon src="www/res/icon/ios/icon-80.png" width="80" height="80" />
		<!-- iPhone / iPod Touch -->
		<icon src="www/res/icon/ios/icon.png" width="57" height="57" />
		<icon src="www/res/icon/ios/icon-114.png" width="114" height="114" />
		<!-- iPad -->
		<icon src="www/res/icon/ios/icon-72.png" width="72" height="72" />
		<icon src="www/res/icon/ios/icon-144.png" width="144" height="144" />
		<!-- iPhone Spotlight and Settings Icon -->
		<icon src="www/res/icon/ios/icon-small.png" width="29" height="29" />
		<icon src="www/res/icon/ios/icon-152.png" width="58" height="58" />
		<!-- iPad Spotlight and Settings Icon -->
		<icon src="www/res/icon/ios/icon-50.png" width="50" height="50" />
		<icon src="www/res/icon/ios/icon-100.png" width="100" height="100" />
		
		<splash src="www/res/splash/android_640x960.png" width="320" height="480"/>
		
	</platform>
	
	<preference name="SplashScreenDelay" value="3000" />
	<preference name="SplashMaintainAspectRatio" value="false" />
	<preference name="SplashScreen" value="android_640x960" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="Orientation" value="portrait" />
	
	
    <access origin="*" />






</widget>
